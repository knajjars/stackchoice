{
  "$schema": "../../../../.astro/collections/baasProvider.schema.json",
  "slug": "convex",
  "website": "https://convex.dev/",
  "name": "Convex",
  "description": "Convex is a new-age backend-as-a-service platform designed to simplify state management for real-time applications. It focuses on managing data and building reactive backends without needing a traditional database.",
  "shortDescription": "A serverless backend platform with real-time sync, global consistency, and automatic caching.",
  "uniqueFeatures": [
    "Emphasizes real-time data synchronization and collaborative apps.",
    "Offers a serverless database with automatic scaling.",
    "Strong focus on simplicity for developers with its functional API."
  ],
  "logo": "./convex.png",
  "repository": "https://github.com/get-convex/convex-backend",
  "sdks": [
    "React",
    "React Native",
    "JavaScript",
    "Svelte",
    "Python",
    "Rust"
  ],
  "cloudHosted": true,
  "selfHosted": true,
  "pricing": {
    "freeTierLimits": {
      "price": null,
      "teamMembers": 2,
      "projects": 20,
      "authUsers": "unlimited",
      "dbStorage": 0.5,
      "dbBandwidth": 1,
      "fileStorage": 1,
      "fileBandwidth": 1,
      "functionCalls": 1000000,
      "note": "DB reads and writes count towards the function call limit."
    },
    "pricedTier": {
      "price": 25,
      "teamMembers": 1,
      "projects": 100,
      "authUsers": "unlimited",
      "dbStorage": 50,
      "dbBandwidth": 50,
      "fileStorage": 100,
      "fileBandwidth": 50,
      "functionCalls": 25000000,
      "note": "DB reads and writes count towards the function call limit."
    },
    "overagePricing": {
      "price": null,
      "projects": null,
      "authUsers": null,
      "teamMembers": 25,
      "dbStorage": 0.2,
      "dbBandwidth": 0.2,
      "fileStorage": 0.03,
      "fileBandwidth": 0.3,
      "functionCalls": 2,
      "note": "DB reads and writes count towards the function call limit."
    }
  },
  "features": {
    "authentication": {
      "social": true,
      "email": true,
      "phone": true,
      "magicLinks": true,
      "sso": false,
      "userManagement": false
    },
    "database": {
      "relations": true,
      "migrations": true,
      "search": true
    },
    "realtime": {
      "pubsub": true,
      "realtimeDatabase": true
    },
    "functions": {
      "triggers": false,
      "runtime": [
        "node",
        "convex"
      ]
    },
    "storage": {
      "fileUpload": true,
      "cdn": true,
      "imageProcessing": false
    },
    "vectorDatabase": {
      "embedding": true,
      "similarity": true
    },
    "jobs": {
      "queueing": true,
      "scheduling": true
    },
    "pushNotifications": {
      "ios": false,
      "android": false
    },
    "permissions": {
      "rbac": false,
      "customRules": true,
      "rowLevelSecurity": false
    },
    "compliances": {
      "hipaa": true,
      "gdpr": true,
      "soc2": true,
      "pci": true
    }
  }
}