---
import { Icon } from "astro-icon/components";
import startCase from "lodash/startCase";

type Props = {
  features: Record<string, any>;
};

const { features } = Astro.props as Props;

const featureKeys = Object.keys(features);
---

<ul class="space-y-2">
  {
    featureKeys.map((key) => (
      <li
        class={`flex items-center gap-x-3 rounded-lg p-2 transition-colors ${features[key] ? "bg-green-50 text-green-700" : "bg-gray-50 text-gray-500"}`}
      >
        {features[key] ? (
          <Icon
            name="mdi:check-circle"
            class="h-5 w-5 flex-shrink-0 text-green-500"
          />
        ) : (
          <Icon
            name="mdi:close-circle"
            class="h-5 w-5 flex-shrink-0 text-gray-400"
          />
        )}
        <span class="font-medium">
          {typeof features[key] === "boolean"
            ? startCase(key)
            : `${startCase(key)}: ${features[key]}`}
        </span>
      </li>
    ))
  }
</ul>
