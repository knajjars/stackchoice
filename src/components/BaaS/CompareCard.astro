---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  provider: CollectionEntry<"baasProvider">;
  otherProvider: CollectionEntry<"baasProvider">;
};

const { provider, otherProvider }: Props = Astro.props;
---

<a
  href={`/baas-providers/compare/${provider.data.slug}-vs-${otherProvider.data.slug}`}
  class="group flex items-center justify-between rounded-lg bg-white p-3 shadow-sm transition-all duration-300 ease-in-out hover:bg-purple-50 hover:shadow-md"
>
  <div class="flex items-center space-x-3">
    <span class="text-lg font-semibold text-purple-600">vs</span>
    <div class="flex items-center space-x-2">
      <Image
        src={otherProvider.data.logo}
        alt={`${otherProvider.data.name} logo`}
        width={26}
        height={26}
        loading="eager"
      />
      <span class="text-lg font-medium text-gray-800">
        {otherProvider.data.name}
      </span>
    </div>
  </div>
  <Icon
    name="mdi:arrow-right"
    class="size-6 text-purple-500 transition-transform duration-300 group-hover:translate-x-1 group-hover:text-purple-600"
  />
</a>
