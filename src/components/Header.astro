---
import { cn } from "~/lib/cn";
import { Icon } from "astro-icon/components";

const currentPath = Astro.url.pathname;

const navItems = [
  {
    href: "/baas-providers",
    label: "Backend Providers",
    icon: "mdi:server-network",
  },
  {
    href: "/full-stack-frameworks",
    label: "Full-Stack Frameworks",
    icon: "mdi:layers-triple",
  },
];
---

<header
  class="container sticky top-0 z-10 mx-auto bg-white/80 py-4 backdrop-blur-md"
>
  <nav class="flex items-center justify-between px-4">
    <a
      href="/"
      class="flex items-center text-2xl font-extrabold text-purple-600 transition-colors hover:text-purple-700"
    >
      <Icon name="mdi:alpha-s-box" class="mr-2 h-8 w-8" />
      StackChoice<span class="text-gray-600">.dev</span>
    </a>
    <ul class="flex space-x-1">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={cn(
                "flex items-center rounded-full px-3 py-2 text-sm font-medium transition-colors",
                currentPath.startsWith(item.href)
                  ? "bg-purple-100 text-purple-700"
                  : "text-gray-600 hover:bg-gray-100 hover:text-purple-600",
              )}
            >
              <Icon name={item.icon} class="mr-2 h-5 w-5" />
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
