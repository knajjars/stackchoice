---
import { getCollection } from "astro:content";
import MainLayout from "~/layouts/Layout.astro";
import List from "~/components/FullStackFramework/List.astro";

const fullStackFrameworks = (await getCollection("fullStackFramework")).sort(
  (a, b) => a.data.name.localeCompare(b.data.name),
);

const pageTitle = "Full-Stack Frameworks | List of Full-Stack Frameworks";
---

<MainLayout
  title={pageTitle}
  description="Explore full-stack frameworks that provide comprehensive solutions for building web applications from start to finish."
>
  <List fullStackFrameworks={fullStackFrameworks} />
</MainLayout>
