---
import { getCollection } from "astro:content";
import MainLayout from "~/layouts/Layout.astro";
import List from "~/components/BaaS/List.astro";

const baasProviders = (await getCollection("baasProvider")).sort((a, b) =>
  a.data.name.localeCompare(b.data.name),
);

const pageTitle = "BaaS Providers | List of Backend as a Service Providers";
---

<MainLayout
  title={pageTitle}
  description="Discover BaaS solutions that allow developers to focus on building great applications without worrying about backend infrastructure."
>
  <List baasProviders={baasProviders} />
</MainLayout>
