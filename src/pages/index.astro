---
import MainLayout from "~/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout>
  <section
    class="hero relative overflow-hidden rounded bg-gradient-to-br from-purple-600 to-indigo-600 px-8 py-24 text-white md:px-12"
  >
    <div class="container relative z-10 mx-auto max-w-4xl text-center">
      <h1
        class="animate-fade-in mb-6 text-4xl font-extrabold leading-tight md:text-5xl"
      >
        Welcome to <span class="text-yellow-300">StackChoice.dev</span>
      </h1>
      <p class="animate-fade-in mb-10 text-xl leading-relaxed">
        Empowering developers worldwide to explore, evaluate, and choose the
        ideal tools for building their applications with confidence.
      </p>
      <a
        href="/baas-providers"
        class="group relative inline-flex items-center rounded-full bg-white px-6 py-3 font-semibold text-purple-600 transition-all duration-300 hover:scale-105 hover:bg-yellow-300 hover:text-purple-700"
      >
        <span
          class="particles particles-1 absolute left-0 top-1/2 -translate-y-1/2"
        ></span>
        <span
          class="particles particles-2 absolute left-0 top-1/2 -translate-y-1/2"
        ></span>
        <span
          class="particles particles-3 absolute left-0 top-1/2 -translate-y-1/2"
        ></span>
        <span
          class="particles particles-4 absolute left-0 top-1/2 -translate-y-1/2"
        ></span>
        <Icon
          name="mdi:rocket-launch"
          class="mr-2 h-5 w-5 transition-transform duration-300 group-hover:rotate-45"
        />
        <span class="relative">
          Explore Backend Providers
          <span
            class="absolute bottom-0 left-0 h-0.5 w-0 bg-purple-700 transition-all duration-300 group-hover:w-full"
          ></span>
        </span>
      </a>
    </div>
    <div class="absolute inset-0 overflow-hidden">
      <div
        class="animate-float-slow absolute left-[22%] top-[13%] h-16 w-16 rounded-full bg-yellow-200 opacity-20"
      >
      </div>
      <div
        class="animate-float-medium absolute right-1/4 top-1/4 h-24 w-24 rounded-full bg-green-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-fast absolute bottom-1/3 left-1/3 h-20 w-20 rounded-full bg-yellow-400 opacity-20"
      >
      </div>
      <div
        class="animate-float-slow absolute right-1/3 top-1/2 h-28 w-28 rounded-full bg-pink-400 opacity-20"
      >
      </div>
      <div
        class="animate-float-medium absolute left-[10%] top-[40%] h-12 w-12 rounded-full bg-blue-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-fast h-18 w-18 absolute bottom-[20%] right-[15%] rounded-full bg-purple-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-slow absolute left-[40%] top-[60%] h-14 w-14 rounded-full bg-red-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-medium h-22 w-22 absolute right-[45%] top-[10%] rounded-full bg-indigo-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-fast absolute bottom-[10%] left-[5%] h-16 w-16 rounded-full bg-teal-300 opacity-20"
      >
      </div>
      <div
        class="animate-float-slow absolute right-[8%] top-[35%] h-20 w-20 rounded-full bg-orange-300 opacity-20"
      >
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .particles {
    width: 2px;
    height: 2px;
    background: transparent;
    box-shadow:
      0 0 #fde68a,
      0 0 #fde68a,
      0 0 #fde68a,
      0 0 #fde68a,
      0 0 #fde68a;
  }

  .group:hover .particles-1 {
    animation: particles 0.6s ease-in-out infinite;
  }

  .group:hover .particles-2 {
    animation: particles 0.6s ease-in-out infinite 0.2s;
  }

  .group:hover .particles-3 {
    animation: particles 0.6s ease-in-out infinite 0.4s;
  }

  .group:hover .particles-4 {
    animation: particles 0.6s ease-in-out infinite 0.6s;
  }

  @keyframes particles {
    0% {
      box-shadow:
        0 0 #fde68a,
        0 0 #fde68a,
        0 0 #fde68a,
        0 0 #fde68a,
        0 0 #fde68a;
    }
    100% {
      box-shadow:
        -20px -8px 0 0 #fde68a,
        -40px 0 0 0 #fde68a,
        -60px 8px 0 0 #fde68a,
        -80px -4px 0 0 #fde68a,
        -100px 4px 0 0 #fde68a;
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-40px);
    }
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }

  .animate-float-slow {
    animation: float 8s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-fast {
    animation: float 4s ease-in-out infinite;
  }
</style>
