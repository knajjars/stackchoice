---
import MainLayout from "~/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout>
  <section
    class="hero relative overflow-hidden rounded bg-gradient-to-br from-purple-600 to-indigo-700 px-8 py-24 text-white md:px-12"
  >
    <div class="container relative mx-auto max-w-4xl text-center">
      <h1 class="mb-6 text-4xl font-extrabold leading-tight md:text-5xl">
        Welcome to <span class="text-yellow-300">StackChoice.dev</span>
      </h1>
      <p class="mb-10 text-xl leading-relaxed">
        Empowering developers worldwide to explore, evaluate, and choose the
        ideal tools for building their applications with confidence.
      </p>
      <a
        href="/baas-providers"
        class="group inline-flex items-center rounded-full bg-white px-6 py-3 font-semibold text-purple-600 transition-all duration-300 hover:scale-105 hover:bg-yellow-300 hover:text-purple-700 hover:shadow-lg"
      >
        <Icon
          name="mdi:rocket-launch"
          class="mr-2 h-5 w-5 transition-transform duration-300 group-hover:rotate-45"
        />
        <span class="relative">
          Explore Backend Providers
          <span
            class="absolute bottom-0 left-0 h-0.5 w-0 bg-purple-700 transition-all duration-300 group-hover:w-full"
          ></span>
        </span>
      </a>
    </div>
  </section>
</MainLayout>
